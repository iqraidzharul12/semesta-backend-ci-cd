{
  "name": "semesta-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "npm run seed && nodemon -e ts --exec \"npm run compile && node ./dist/index.js\"",
    "compile": "tsc",
    "postinstall": "node ./bin/postinstall.js",
    "server": "pm2",
    "seed": "tsc && node ./dist/utilities/CustomSeed.js",
    "build:development": "npm run seed && pm2 start ecosystem.config.js --env development --no-daemon",
    "build:stagging": "npm run seed && pm2 start ecosystem.config.js --env stagging --no-daemon",
    "build:production": "npm run seed && pm2 start ecosystem.config.js --env production --no-daemon",
    "db": "typeorm"
  },
  "dependencies": {
    "@hapi/hapi": "^18.4.1",
    "@hapi/inert": "^5.2.1",
    "@types/puppeteer": "^1.19.0",
    "axios": "^0.18.0",
    "class-validator": "^0.9.1",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^6.2.0",
    "firebase-admin": "^7.0.0",
    "fs-extra": "^8.1.0",
    "handlebars": "^4.7.3",
    "hapi-auth-jwt2": "^8.6.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "pg": "^7.11.0",
    "puppeteer": "^1.19.0",
    "qrcode": "^1.4.4",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/dotenv": "^6.1.1",
    "@types/fs-extra": "^8.0.0",
    "@types/hapi": "^18.0.2",
    "@types/hapi__hapi": "^18.2.5",
    "@types/hapi__inert": "^5.2.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "^12.7.2",
    "@types/pg": "^7.4.14",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@typescript-eslint/typescript-estree": "^1.12.0",
    "eslint": "^5.3.0",
    "eslint-plugin-import": "^2.16.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "pm2": "^3.5.1",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  }
}
